/// <reference types="vite/client" />

/**
 * Interface to define the structure of environment variables accessed via import.meta.env.
 * This resolves error TS2339: Property 'env' does not exist on type 'ImportMeta'.
 */
interface ImportMetaEnv {
  // Ensure the variable name you use for the API base URL is declared here:
  readonly VITE_API_BASE_URL: string;
  // Add other environment variables here if needed (e.g., VITE_FIREBASE_KEY)
}

interface ImportMeta {
  readonly env: ImportMetaEnv;
}
